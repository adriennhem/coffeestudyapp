
<div class="container-fluid">

   <div class="row" id="bg">
      <div class="col-md-5 col-md-offset-3">
   <%= form_tag places_path, method: :get, id: 'search' do %>
        <div class="input-group input-group-sm">
          <%= text_field_tag :search, params[:search], class: "form-control controls", :id => "pac-input" %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn btn-default", :name => nil) do %>
                <span class="glyphicon glyphicon-search"></span> 
              <% end %>
            </span>
        </div>
    <% end %>
    </div>
</div>


<div class="container">
  <h1 class="page-header">Most Recent</h1>

      <% @places.each do |place| %>
  
  <div class="col-md-4 box">

    <div class="panel panel-default">
      <%= link_to place_path(place) do %> 
        <%= image_tag place.image.url(:medium) %>
            <% end %>
      <div class="panel-body">
        <strong> <%= place.business_name %></strong> <br>
         <%= place.address %> <br>
         <div class="star-rating" data-score= <%= place.average %> ></div>
         
          <% if place.user == current_user && user_signed_in? %>
            <%= link_to 'Edit', edit_place_path(place) %>
            <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
  </div> <!-- panel body -->
    </div> <!-- col-md-4 -->

    </div>
    <% end %> 
</div>



  </div> <!-- container -->
</div> <!-- container-fluid -->
