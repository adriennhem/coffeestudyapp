<p id="notice"><%= notice %></p>

<div class="container">
	<div class="col-md-9 col-md-offset-1 place-show">

		<h1 class="page-header">SIGN UP</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
		
	  <div class="form-group">
	   <%= f.input :email, placeholder: 'Email', input_html: { class: 'form-control' }, label: false %>
	   </div>

	   <div class="form-group">
	   <%= f.input :password, placeholder: 'Password', label: false, input_html: { class: 'form-control' } %>
	   </div>

	   <div class="form-group">
	   <%= f.input :password_confirmation, placeholder: 'Password confirmation', label: false, input_html: { class: 'form-control' } %>
	   </div>


	   <%= f.button :submit, 'Sign up', class: "btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
	
	</div>
</div>	



